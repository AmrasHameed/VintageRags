<%- include ("header.ejs") %>
<div class="bg-light py-3">
  <div class="container">
      <div class="row">
          <div class="col-md-12 mb-0"><a href="/">Home</a> <span class="mx-2 mb-0">/</span> <strong
                  class="text-black"><%= productOne.name %></strong></div>
      </div>
  </div>
</div>

<div class="site-section">
  <div class="container">
      <div class="row">
          <div class="col-md-6">
              <img src="<%= productOne.image[0] %>" alt="Image" class="img-fluid">
          </div>
          <div class="col-md-6">
              <h2 class="text-black"><%= productOne.name %></h2>
              <p><%= productOne.description %></p>
              <p><strong class="text-primary h4">$<%= productOne.price %></strong></p>
              <div class="mb-5">
                  <div class="input-group mb-3" style="max-width: 120px;">
                      <div class="input-group-prepend">
                          <button class="btn btn-outline-primary js-btn-minus" type="button">&minus;</button>
                      </div>
                      <input type="text" class="form-control text-center" value="1" placeholder=""
                          aria-label="Example text with button addon" aria-describedby="button-addon1">
                      <div class="input-group-append">
                          <button class="btn btn-outline-primary js-btn-plus" type="button">&plus;</button>
                      </div>
                  </div>
              </div>
              <p><a href="/cart" class="buy-now btn btn-sm btn-primary">Add To Cart</a></p>

          </div>
      </div>
  </div>
</div>



  <div class="site-section block-3 site-blocks-2 bg-light">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-7 site-section-heading text-center pt-4">
          <h2>Featured Products</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="nonloop-block-3 owl-carousel">
            <% products.forEach(product=> { %>
              <div class="item">
                <a href="/shopSingle/<%= product._id %>">
                  <div class="block-4 text-center">
                    <figure class="block-4-image">
                      <img src="<%= product.image[0] %>" alt="Image placeholder" class="img-fluid">
                      <p><%= product.image[0] %></p>
                    </figure>
                    <div class="block-4-text p-4">
                      <h3><a href="/shopSingle/<%= product._id %>">
                          <%= product.name %>
                        </a></h3>
                      <p class="mb-0">
                        <%= product.description %>
                      </p>
                      <p class="text-primary font-weight-bold">$<%= product.price %>
                      </p>
                    </div>
                  </div>
                </a>
              </div>
              <% }); %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include ("footer.ejs") %>