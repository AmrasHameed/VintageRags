<%- include ("header.ejs") %>
<div class="bg-light py-3">
    <div class="container">
      <div class="row">
        <div class="col-md-12 mb-0"><a href="/profile">User</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Wallet</strong></div>
      </div>
    </div>
    </div>
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Wallet History</h1>
        <h4 class="mb-4">Balance: <%= user.wallet %></h4>
        <form id="Form" class="mb-4">
            <div class="input-group">
                <input type="number" id="Amount" name="Amount" class="form-control" placeholder="Enter Amount">
                <button class="btn btn-primary" onclick="RazorpayWallet(event)">Add To Wallet</button>
            </div>
        </form>
        <% if(wallet && wallet.history.length > 0) { %>
        <div class="row">
            <% wallet.history.forEach((entry, index) => { %>
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-<%= entry.transaction === 'Credited' ? 'success' : 'danger'; %>">
                            <%= entry.transaction %>
                        </h5>

                        <p class="card-text">Reason: <%= entry.reason %></p>

                        <p class="card-text">Amount: <%= entry.amount %></p>

                        <p class="card-text">Date: <%= new Date(entry.date).toLocaleString() %></p>
                    </div>
                </div>
            </div>
            <% if((index + 1) % 2 === 0 && (index + 1) !== wallet.history.length) { %>
        </div>
        <div class="row">
            <% } %>
            <% }); %>
        </div>
        <% } else { %>
        <p class="text-center">No history available.</p>
        <% } %>
    </div>
    

    <script>
        async function RazorpayWallet() {
            event.preventDefault()
            console.log("ivide function");
            let amountToPay = document.getElementById('Amount').value
            console.log(amountToPay);
            if (!amountToPay) {
                Swal.fire({
                    text: 'please enter an amount',
                    icon: 'error',
                    confirmButtonText: 'OK',
                    customClass: {
                        title: 'text-danger',
                        popup: 'swal2-popup-custom',
                        confirmButton: 'btn btn-danger'
                    },
                    showCancelButton: false,
                    showCloseButton: true,
                    showLoaderOnConfirm: false,
                    timer: 3000
                });

            }



            else {
                console.log("upi total", "ppppppp");
                var options = {
                    key: 'rzp_test_IjovpkTeb85bN5',
                    amount: amountToPay * 100,
                    currency: "INR",
                    name: "VintageRags",
                    description: "Test Transaction",
                    image: "https://i.ibb.co/6sgJyMz/logo.png",
                    order_id: orderId,
                    handler: function (response) {
                        // alert(response.razorpay_payment_id);
                        document.getElementById("Form").method = "post";
                        document.getElementById("Form").action = "/walletTopup";
                        document.getElementById("Form").submit();
                    },

