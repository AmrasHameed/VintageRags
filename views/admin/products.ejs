<%-include('adminHead.ejs') %>
    <div class="container-fluid">
        <div class="row my-4">
            <div class="col-lg-12">
                <% if(productSuccess&&productSuccess.length>0) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                        <strong>
                            <%=productSuccess %>
                        </strong>
                    </div>
                    <% } %>
                        <a href="/admin/addProduct" class="btn btn-primary float-right mb-3">Add Product</a>
                        <div class="table-responsive">
                            <%if(product!=""){%>
                                <table class="table table-striped text-center">
                                    <thead>
                                        <tr class="table-primary">
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Category</th>
                                            <th>Price</th>
                                            <th>Stock</th>
                                            <th>Image</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% product.forEach((row,index)=> { %>
                                            <tr>
                                                <td>
                                                    <%= index %>
                                                </td>
                                                <td>
                                                    <%= row.name %>
                                                </td>
                                                <td>
                                                    <%= row.category%>
                                                </td>
                                                <td>
                                                    <%= row.price%>
                                                </td>
                                                <td>
                                                    <%= row.stock%>
                                                </td>
                                                <td>
                                                    <img src="/<%= row.image[0]%>" width="55" class="img-thumbnail" alt="image">
                                                </td>
                                                <td>
                                                    <%= row.status%>
                                                </td>
                                                <td>
                                                    <a href="/admin/update/<%= row._id %>" class="text-success"><i
                                                            class="fas fa-edit fa-lg mx-1"></i></a>
                                                </td>
                                                <td>
                                                    <a href="/admin/delete/<%= row._id %>" class="text-danger"><i
                                                            class="fas fa-trash fa-lg mx-1"></i></a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                                <%} else {%>
                                    <h1 class="text-center text-secondary mt-5">No Product found in the database</h1>
                                    <%}%>
                        </div>
            </div>
        </div>
    </div>

    <%-include('adminFooter.ejs') %>